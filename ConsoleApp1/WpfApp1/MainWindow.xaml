<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="789">
    <Grid>
        <TextBox x:Name="StudentIdTB" HorizontalAlignment="Left" Margin="270,110,0,0" TextWrapping="Wrap" Text="Enter the Student ID" VerticalAlignment="Top" Width="219" Height="20"/>
        <TextBox x:Name="StudentNameTB" HorizontalAlignment="Left" Margin="270,181,0,0" TextWrapping="Wrap" Text="Student Name" VerticalAlignment="Top" Width="219" Height="25"/>
        <TextBox x:Name="UniversityTB" HorizontalAlignment="Left" Margin="270,221,0,0" TextWrapping="Wrap" Text="University Name" VerticalAlignment="Top" Width="219" Height="25"/>
        <Button x:Name="SearchBtn" Content="Search" HorizontalAlignment="Left" Margin="520,110,0,0" VerticalAlignment="Top" Click="SearchBtn_Click" Height="20" Width="52"/>

    </Grid>
</Window>
